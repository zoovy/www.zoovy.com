				<%perl>
## Basic Recent News table -- shows last 5 most recent entries.
use Lingua::EN::Summarize;
use lib "/httpd/modules";
use DBINFO;
my $zdbh = &DBINFO::db_zoovy_connect();
my $pstmt = "select CREATED,TITLE,TOPIC,MESSAGE from RECENT_NEWS where PUBLIC>0 order by ID desc limit 0,5";
my $sth = $zdbh->prepare($pstmt);
$sth->execute();
while (my ($CREATED,$TITLE,$TOPIC,$MESSAGE) = $sth->fetchrow_array()) {
	print qq~<b>$CREATED - $TITLE</b><br>~;
#	print $MESSAGE;
	print summarize( $MESSAGE, filter => 'html', maxlength=>128);
	print qq~<br><hr>~;
	}
$sth->finish();
&DBINFO::db_zoovy_close();

				</%perl>
