#!/usr/bin/perl

use CGI;
use lib "/httpd/modules";
require GTOOLS;
require ORDER;
require ZOOVY;


$q = new CGI;
my ($USERNAME,$FLAGS,$MID,$LUSER,$RESELLER) = ZOOVY::authenticate("/biz/setup",2,'_O&4');
if ($USERNAME eq '') { exit; }

$CMD = $q->param('CMD');
$ID = $q->param('ID');
$GTOOLS::TAG{'<!-- ID -->'} = $ID;

my ($o) = ORDER->new($USERNAME,$ID);

if ($CMD eq 'SAVE')
	{
	if ($q->param('notes') ne '')	
		{
		$o->set_attribs('order_notes',$q->param('notes'));
		$o->save();
		}

	print "Content-type: text/html\n\n";
	&GTOOLS::print_form('','close-popup.shtml',0);
	}

if ($CMD eq '')
	{
	$GTOOLS::TAG{'<!-- CONTENT -->'} = &ZOOVY::incode($o->get_attrib('order_notes'));
	print "Content-type: text/html\n\n";
	&GTOOLS::print_form('','notes.shtml',0);
	}


