<center>
<table width="600">
<tr><td>
<h2>User Manager</h2><br>

<form name="thisFrm" action="index.cgi" method="POST">
<input type="hidden" name="ACTION" value="SAVE">
<input type="hidden" name="UID" value="<!-- UID -->">

<!-- ERRORS -->

<b>Create New User:</b><br>
<table>
	<tr>	
		<td>Login:</td>
		<td><!-- MERCHANT -->*<!-- LUSER_EDIT --></td>
		<td>&nbsp;&nbsp;</td>
		<td>Password:</td>
		<td><input type="textbox" name="password" maxlength="20" size="20" value="<!-- PASSWORD -->"></td>
	</tr>
	<tr>
		<td>Full Name:</td>
		<td><input type="textbox" name="fullname" maxlength="40" size="40" value="<!-- FULLNAME -->"></td>
		<td>&nbsp;&nbsp;</td>		
		<td>Job Title:</td>
		<td><input type="textbox" name="title" size="25" maxlength="25" value="<!-- TITLE -->"></td>
	</tr>
	<tr>
		<td>Email:</td>
		<td><input type="textbox" name="email" size="25" maxlength="65" value="<!-- EMAIL -->"></td>
		<td>&nbsp;&nbsp;</td>
		<td>Phone:</td>
		<td><input type="textbox" name="phone" size="20" maxlength="20" value="<!-- PHONE -->"></td>
	</tr>
	<tr>
		<td colspan='2'><input type="checkbox" <!-- CHK_IS_ADMIN --> name="IS_ADMIN"> Master Access</td>
		<td>&nbsp;&nbsp;</td>
		<td colspan='2'><input type="checkbox" <!-- CHK_IS_CUSTOMERSERVICE --> name="IS_CUSTOMERSERVICE"> Is Customer Service</td>
	</tr>
	<tr>
		<td>Expires:</td>
		<td colspan='4'><input type="textbox" name="expires" value="<!-- EXPIRES -->"> <i>(MM/DD/YY - Leave this blank for accounts that do not expire)</i></td>
	</tr>
	<tr>
		<td colspan='4'><input type="checkbox" name="ALLOW_FORUMS" <!-- CHK_ALLOW_FORUMS -->> Allow posting access to the Zoovy Community Forums<br></td>
	</tr>
	<!-- ZOOVYMAIL -->
</table>
<br>

<u>Access Privledges:</u><br>
<table><tr><td valign='top'>
	<table>
	<tr><td valign="top"><b>Setup Area</b></td></tr>
	<tr>
		<td valign="top">
			<input <!-- CHK_SETUP_1 --> onClick="changeAll(this,'setup','8');" type="checkbox" name="setup_1"> Grant Full Access<br>
			<input <!-- CHK_SETUP_2 --> type="checkbox" name="setup_2"> Allow: Update Website<br>
			<input <!-- CHK_SETUP_4 --> type="checkbox" name="setup_4"> Allow: Manage Images<br>
			<input <!-- CHK_SETUP_8 --> type="checkbox" name="setup_8"> Allow: Payment/Shipping/Checkout<br>
		</td>
	</tr>
	</table>
</td><td valign='top'>
	<table>
	<tr><td valign="top"><b>Products</b></td></tr>
	<tr>
		<td valign="top">
			<input <!-- CHK_PRODUCT_1 --> onClick="changeAll(this,'product','8');"  type="checkbox" name="product_1"> Grant Full Access<br>
			<input <!-- CHK_PRODUCT_2 --> type="checkbox" name="product_2"> Add/Update<br>
			<input <!-- CHK_PRODUCT_4 --> type="checkbox" name="product_4"> Remove<br>
			<input <!-- CHK_PRODUCT_8 --> type="checkbox" name="product_8"> Create Channels<br>
			<input <!-- CHK_PRODUCT_16 --> type="checkbox" name="product_16"> Syndication Setup<br>
		</td>
	</tr>
	</table>
</td></tr>
<tr><td valign='top'>

	<table>
	<tr><td valign="top"><b>Order Area</td></tr>
	<tr>
		<td valign="top">
			<input <!-- CHK_ORDER_1 --> onClick="changeAll(this,'order','16');"  type="checkbox" name="order_1"> Grant Full Access<br>
			<input <!-- CHK_ORDER_2 --> type="checkbox" name="order_2"> Allow: View Orders<br>
			<input <!-- CHK_ORDER_4 --> type="checkbox" name="order_4"> Allow: Add/Update Invoices<br>
			<input <!-- CHK_ORDER_8 --> type="checkbox" name="order_8"> Allow: View/Update Payment Detail<br>
		</td>
	</tr>
	</table>

</td><td valign='top'>
	<table>
	<tr><td valign="top"><b>Manage/Reports</td></tr>
	<tr>
		<td valign="top">
			<input <!-- CHK_MANAGE_1 --> onClick="changeAll(this,'manage','16');"  type="checkbox" name="manage_1"> Grant Full Access<br>
			<input <!-- CHK_MANAGE_2 --> type="checkbox" name="manage_2"> Allow: Reports<br>
			<input <!-- CHK_MANAGE_4 --> type="checkbox" name="manage_4"> Allow: Channel Management<br>
			<input <!-- CHK_MANAGE_8 --> type="checkbox" name="manage_8"> Allow: Customer Management<br>
			<input <!-- CHK_MANAGE_16 --> type="checkbox" name="manage_16"> Allow: CSV Import/Export<br>
		</td>
	</tr>
	</table>
</td></tr>
</table>

</td></tr></table>

