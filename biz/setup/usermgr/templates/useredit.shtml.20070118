<script>
<!--//
function changeAll(cb,name,max) {
	var v = false;
	if (cb.checked == true) { v = true; }
	var i = 1;
	while (i <= max) {
		document.thisFrm.elements[name + '_' + i].checked = v;
		i = i * 2;
		}
	}
//-->
</script>
</head>
<body marginwidth="0" marginheight="0" topmargin="0" leftmargin="0" bgcolor="FFFFFF">
