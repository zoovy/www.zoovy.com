	<DIV NAME="ALPHA" TITLE="Welcome to Excite Shopping!">
		<META TYPE="TITLE">
		Shop @ Excite!
			</META>
		<META TYPE="DESCRIPTION">
		This is a demo of the Exite Shopping Marketplace
			</META>
		<BUTTON TYPE="NEXT" TARGET="OMEGA" PROMPT="Review"></BUTTON>
		<BUTTON TYPE="EXIT" TARGET="OMEGA" PROMPT="Exit"></BUTTON>

		<DISPLAY TYPE="TITLE">Product Information</DISPLAY>

		<INPUT TYPE="TEXTBOX" 
				NAME="product:zoovy:prod_name" 
				PROMPT="Product Name" 
				HELP="Please provide a short name which describes the product"
				COLS="75" 
				MANDATORY="Y">
			</INPUT>

		<INPUT TYPE="TEXTAREA"
				NAME="product:zoovy:prod_desc"
				PROMPT="Product Description"
				HELP="Please provide a detailed description of your product."
				COLS="80" ROWS="5" MAXLENGTH="5000"
				MANDATORY="Y">
			</INPUT>

		<INPUT TYPE="NUMBER" 
				MIN="0" 
				DECIMAL="Y" 
				NAME="product:zoovy:base_price" 
				PROMPT="Sale Price"
				HELP="The sale price is the price a customer can purchase the item for."
				COLS="10" 
				MANDATORY="Y">
			</INPUT>

		<INPUT TYPE="NUMBER" 
				MIN="0" 
				DECIMAL="Y" 
				NAME="product:zoovy:retail_price" 
				PROMPT="Suggested Retail Price"
				HELP="Enter the Suggested Retail Price - if different from the Sale Price."
				COLS="10" 
				MANDATORY="N">
			</INPUT>

		<DISPLAY TYPE="TITLE">Product Images</DISPLAY>

		<INPUT TYPE="IMAGE" 
				NAME="product:zoovy:prod_image1" 
				PROMPT="Primary Image" 
				MANDATORY="Y">
			</INPUT>

		<INPUT TYPE="IMAGE" 
				NAME="product:zoovy:prod_image2" 
				PROMPT="Secondary Image" 
				MANDATORY="N">
			</INPUT>

		<INPUT TYPE="IMAGE" 
				NAME="product:zoovy:prod_image3" 
				PROMPT="Trinary Image" 
				MANDATORY="N">
			</INPUT>


		<INPUT TYPE="IMAGE" 
				NAME="product:zoovy:prod_thumb" 
				PROMPT="Thumbnail" 
				LOADFROM="product:zoovy:prod_image1"
				MANDATORY="Y">
			</INPUT>

		<DISPLAY TYPE="TITLE">Listing Upgrades</DISPLAY>
		<INPUT TYPE="RADIO" PROMPT="Specialty Icon"
				NAME="product:excite:icon"
				HELP="Add specialty icons to make your products stand out so you sell more!"
				STICKY="Y"
				LIST="ICONS"></INPUT>
		<INPUT TYPE="RADIO"
				NAME="product:excite:feature"
				PROMPT="Feature Product"
				HELP="Featuring your product insures maximum exposure to customers."
				STICKY="Y"
				LIST="FEATURE">
			</INPUT>
				
		<INPUT TYPE="TREE"
				PROMPT="Excite Shopping Category"
				NAME="product:excite:category"
				STICKY="Y" MANDATORY="Y"
				HELP="Select a category" LIST="CATEGORY">
			</INPUT>

		<BUTTON TYPE="PEER" TARGET="OMEGA" PROMPT="Review and Launch"></BUTTON>
	</DIV>

	<DIV NAME="OMEGA">
		<BUTTON TYPE="SUBMIT" PROMPT="Send to Shop @ Excite"></BUTTON>
		<BUTTON TYPE="LAST" PROMPT="Edit Listing"></BUTTON>
		<DISPLAY TYPE="TITLE">Thank You</DISPLAY>
		<DISPLAY TYPE="BLANK"></DISPLAY>
		<DISPLAY TYPE="LABEL">Your Listing Will Appear on http://excite.gunnett.org shortly.</DISPLAY>
		<DISPLAY TYPE="BLANK"></DISPLAY>
		<DISPLAY TYPE="LABEL">Any fees will be automatically billed to your account.</DISPLAY>
		
	</DIV>


