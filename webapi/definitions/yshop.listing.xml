<DEFINITION NAME="listing">

	<LIST NAME="CONDITION">
		<OPTION VALUE="new" PROMPT="new">new</OPTION>
		<OPTION VALUE="like new" PROMPT="like new">like new</OPTION>
		<OPTION VALUE="very good" PROMPT="very good">very good</OPTION>
		<OPTION VALUE="good" PROMPT="good">good</OPTION>
		<OPTION VALUE="acceptable" PROMPT="acceptable">acceptable</OPTION>
	</LIST>
	
	<LIST NAME="CLASSIFICATION">
		<OPTION VALUE="new" PROMPT="new">new</OPTION>
		<OPTION VALUE="overstock" PROMPT="overstock">overstock</OPTION>
		<OPTION VALUE="damaged" PROMPT="damaged">damaged</OPTION>
		<OPTION VALUE="returned" PROMPT="returned">returned</OPTION>
		<OPTION VALUE="refurbished" PROMPT="refurbished">refurbished</OPTION>
		<OPTION VALUE="open box" PROMPT="open box">open box</OPTION>
		<OPTION VALUE="liquidation" PROMPT="liquidation">liquidation</OPTION>
		<OPTION VALUE="used" PROMPT="used">used</OPTION>
	</LIST>

	<DIV NAME="ALPHA" TITLE="Welcome!">
		<META TYPE="TITLE">Yahoo Shopping</META>

		<INPUT TYPE="TEXTBOX" NAME="product:yshop:category" PROMPT="Yahoo Shopping Category"></INPUT>
		<INPUT TYPE="SELECT" LIST="CONDITION" NAME="product:yshop:prod_condition" PROMPT="Yahoo Shopping Condition"></INPUT>
		<INPUT TYPE="SELECT" LIST="CLASSIFICATION" NAME="product:yshop:prod_class" PROMPT="Yahoo Shopping Classification"></INPUT>
		<INPUT TYPE="NUMBER" SIZE="10" MIN="0" MAX="365" NAME="product:yshop:prod_avail" PROMPT="Yahoo Shopping Availabililty (in days)"></INPUT>
		<INPUT TYPE="TEXTBOX" SIZE="15" NAME="product:yshop:prod_ean" PROMPT="Yahoo Shopping EAN"></INPUT>

		<INPUT TYPE="TEXTBOX" LENGTH="20" NAME="product:zoovy:prod_mfgid" PROMPT="Manufacturers SKU"></INPUT>
		<INPUT TYPE="TEXTBOX" LENGTH="20" NAME="product:zoovy:prod_mfg" PROMPT="Manufacturers Name" HINT="example: Sony"></INPUT>
		<INPUT TYPE="TEXTBOX" LENGTH="15" NAME="product:zoovy:prod_upc" PROMPT="UPC"></INPUT>

		<BUTTON TYPE="PEER" TARGET="BOOKINFO" PROMPT="Edit Book Properties"></BUTTON>
		<BUTTON TYPE="PEER" TARGET="MUSICINFO" PROMPT="Edit Music Properties"></BUTTON>
		<BUTTON TYPE="PEER" TARGET="MOVIEINFO" PROMPT="Edit Movie Properties"></BUTTON>
		<INPUT TYPE="BLANK"></INPUT>		
	</DIV>

	<DIV NAME="BOOKINFO" TITLE="Books">
		<META TYPE="TITLE">Books
			</META>
		<META TYPE="DESCRIPTION">
	Additional information on books
			</META>
		<BUTTON TYPE="LAST" PROMPT="Back to Edit"></BUTTON>
		
		<DISPLAY TYPE="TITLE">Book Fields:</DISPLAY>
		<INPUT TYPE="TEXTBOX" NAME="product:zoovy:prod_isbn" PROMPT="ISBN"></INPUT>
		<INPUT TYPE="SELECT" HELP="Please select the most appropriate condition" LIST="CONDITION" NAME="product:zoovy:condition" PROMPT="Condition"></INPUT>
		<INPUT TYPE="HIDDEN" NAME="product:zoovy:catalog" VALUE="BOOK"></INPUT>

		<BUTTON TYPE="PEER" TARGET="ALPHA" PROMPT="Back to Edit"></BUTTON>
	</DIV>


	<DIV NAME="MUSICINFO" TITLE="Music">
		<META TYPE="TITLE">Music
			</META>
		<META TYPE="DESCRIPTION">
	Additional information on Music
			</META>
		<BUTTON TYPE="LAST" PROMPT="Back to Edit"></BUTTON>
		<DISPLAY TYPE="TITLE">Music Fields:</DISPLAY>		
		<BUTTON TYPE="PEER" TARGET="MUSICINFO" PROMPT="Music Information"></BUTTON>
		<INPUT TYPE="SELECT" HELP="Select the appropriate format" LIST="FORMAT" NAME="product:zoovy:prod_format" PROMPT="Media Format"></INPUT>
		<INPUT TYPE="TEXTBOX" NAME="product:zoovy:prod_artist" PROMPT="Artist Name"></INPUT>
		<INPUT TYPE="TEXTBOX" NAME="product:zoovy:prod_release" PROMPT="Release Date (MM/DD/YYYY)"></INPUT>
		<INPUT TYPE="HIDDEN" NAME="product:zoovy:catalog" VALUE="CD"></INPUT>
		<BUTTON TYPE="PEER" TARGET="ALPHA" PROMPT="Back to Edit"></BUTTON>
	</DIV>


	<DIV NAME="MOVIEINFO" TITLE="Movies">
		<META TYPE="TITLE">Movies
			</META>
		<META TYPE="DESCRIPTION">
	Additional information on movies
			</META>
		<BUTTON TYPE="LAST" PROMPT="Back to Edit"></BUTTON>
		<DISPLAY TYPE="TITLE">Movies:</DISPLAY>
		<BUTTON TYPE="PEER" TARGET="MOVIEINFO" PROMPT="Movie Information"></BUTTON>
		
		<INPUT TYPE="TEXTBOX" NAME="product:zoovy:prod_director" PROMPT="Director" HELP="Format: First Name Last Name"></INPUT>
		<INPUT TYPE="TEXTBOX" NAME="product:zoovy:prod_starring" PROMPT="Actors" HELP="Format: First Last, First Last, .."></INPUT>
		<INPUT TYPE="TEXTBOX" NAME="product:zoovy:prod_rating" PROMPT="Rating" HELP=""></INPUT>
		<INPUT TYPE="TEXTBOX" NAME="product:zoovy:prod_releaseyear" PROMPT="Release Date" HELP="Format: MM/DD/YYYY"></INPUT>
		<INPUT TYPE="TEXTBOX" NAME="product:zoovy:prod_screen" PROMPT="Color" HELP="Format: "></INPUT>
		<INPUT TYPE="TEXTBOX" NAME="product:zoovy:prod_language" PROMPT="Language"></INPUT>		

		<BUTTON TYPE="PEER" TARGET="ALPHA" PROMPT="Back to Edit"></BUTTON>
	</DIV>
	
</DEFINITION>